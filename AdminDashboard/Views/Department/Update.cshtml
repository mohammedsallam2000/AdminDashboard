@model AdminDashboard.BLL.Models.DepartmentsVM

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Department</h2>

<form  asp-action="Update" asp-controller="Department" method="post">

    <input type="hidden" asp-for="Id" /><br />
    <label for="DepartmentName">Department Name</label>
    <input type="text" class="form-control" id="DepartmentName" name="Name" value="@Model.Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label for="DepartmentCode">Department Code</label>
    <input type="text" class="form-control" id="DepartmentCode" name="Code" value="@Model.Code" />
    <span asp-validation-for="Code" class="text-danger"></span>
    <br />
    <center>

        <input type="submit" class="btn btn-primary" value="Edit" />
    </center>

</form>

@section JqueryValidation{

    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
