@model AdminDashboard.BLL.Models.EmployeeVM
@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<label asp-for="Name">Name</label>

<input type="text" class="form-control" id="Name" asp-for="Name" disabled />
<br />
<br />
<label asp-for="Salary">Salary</label>
<input type="text" class="form-control" asp-for="Salary" id="Salary" disabled />
<br />
<label asp-for="Email">Email</label>
<input type="text" class="form-control" asp-for="Email" id="Email" disabled/>
<br />
<label asp-for="HireDate">Hire Date</label>
<input type="date" class="form-control" asp-for="HireDate" id="HireDate" disabled/>
<br />

<label asp-for="Address">Address</label>
<input type="text" class="form-control" asp-for="Address" id="HireDate" disabled />
<br />
<div class="demo-checkbox">
    <input type="checkbox" asp-for="IsActive" checked="" readonly>
    <label asp-for="IsActive">IsActive</label>
   
</div>
<br />

<select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.Departments">
</select>
<br />

<center>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back</a>
    <a asp-controller="Employee" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>


</center>